<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">

            <br>
            <h3>Create a New Listing</h3>
            <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" type="text"  class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add course description!</div>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Tags</label>
                    <div class="d-flex flex-wrap gap-2">
                        <% tags.forEach((tag, index) => { %>
                            <input
                                type="checkbox"
                                class="btn-check"
                                name="listing[tags][]"
                                id="tag-<%= tag.value %>"
                                value="<%= tag.value %>"
                                <%= index === 0 ? 'required' : '' %>  
                            >
                            <!-- Makes at least one required -->
                            <label class="btn btn-outline-dark" for="tag-<%= tag.value %>"><%= tag.label %></label>
                        <% }) %>
                        
                        <div class="invalid-feedback">Please select a tag!</div>
                    </div>
                </div>
                
                
        
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="language" class="form-label">Language:</label>
                        <select name="listing[language]" id="language" class="form-control" required>
                            <option disabled selected value> -- language? -- </option>
                            <option value="English">English</option>
                            <option value="Hindi">Hindi</option>
                        </select>
                        <div class="invalid-feedback">Please select a language!</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="state" class="form-label" required>Select a state:</label>
                        <select name="listing[state]" id="state" class="form-control" required>
                            <option disabled selected value> -- select an option -- </option>
                            <option value="Recorded">Recorded</option>
                            <option value="Live">Live</option>
                        </select>
                        <div class="invalid-feedback">Please select a status!</div>
                    </div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br>
                <br>
            </form>
        </div>
    </div>
</body>